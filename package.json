{
  "name": "knowledge_base",
  "version": "0.0.1",
  "description": "knowledgebase application code base",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=prod node api/app.js",
    "start:dev": "NODE_ENV=dev node api/app.js",
    "start:test": "NODE_ENV=test node api/app.js",
    "init": "mysql -u root < ./sql/init.sql",
    "init:test": "mysql -u root < ./sql/test_init.sql",
    "clean:test": "mysql -u root < ./sql/test_cleanup.sql",
    "migrate:up": "node_modules/db-migrate/bin/db-migrate up --env test",
    "test": "yarn init:test  && yarn test:unit && yarn test:functional ; yarn clean:test",
    "test:unit": "NODE_ENV=test && yarn migrate:up && mocha --recursive test/unit",
    "test:functional": "NODE_ENV=test && yarn migrate:up && mocha --recursive test/functional",
    "lint": "./node_modules/.bin/eslint $(git ls-files '*.js')"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bennettbuchanan/knowledge_base.git"
  },
  "author": "Bennett Buchanan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bennettbuchanan/knowledge_base/issues"
  },
  "homepage": "https://github.com/bennettbuchanan/knowledge_base#readme",
  "devDependencies": {
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "mocha": "^4.0.1"
  },
  "dependencies": {
    "async": "^2.5.0",
    "db-migrate": "^0.10.0-beta.24",
    "db-migrate-mysql": "^1.1.10",
    "express": "^4.16.1",
    "mysql": "^2.15.0",
    "request": "^2.83.0",
    "werelogs": "github:scality/werelogs"
  }
}
